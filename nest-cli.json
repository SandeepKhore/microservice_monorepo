{
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": ".",
  "sourceRoot": "apps",
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "sourceRoot": "apps/gateway/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "sourceRoot": "apps/auth-service/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.json"
      }
    },
    "user-service": {
      "type": "application",
      "root": "apps/user-service",
      "sourceRoot": "apps/user-service/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/user-service/tsconfig.json"
      }
    }
  }
}